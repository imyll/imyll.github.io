/* pages/search/search.wxss */
/* 搜索框 */
.search{
    width: 100%;
    height: 54px ;
}
.search .van-search{
    width: 85%;
    position: absolute;
    left: 0;
}
.search .van-search .van-search__content{
    border-radius: 25px;
}
.search text{
    width: 15%;
    height: 54px;
    line-height: 54px;
    position: absolute;
    right: 0;
    color: #748389;
}

/* 热搜推荐 */
.searching-hotwords{
    padding: 10px 20px;
}
.searching-hotwords .searching-title{
    margin-bottom: 20px; 
}
.searching-hotwords .searching-title .search-title{
    font-size: 24px;
    color: #6b6b6b;
}
.searching-hotwords .searching-title .right{
    float: right;
    color: #8a8a8f;
    font-size: 24rpx;
    line-height: 30px;
}
.searching-hotwords  .content{
    background: #efeff4;
    color: #9b9ba3;
    font-size: 12px;
    margin:  0 10px 10px 0;
    padding: 5px 10px;
    border-radius: 25px;
    display: inline-block;
}