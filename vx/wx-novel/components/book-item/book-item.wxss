.card {
  display: flex;
  padding: 10px 15px;
}
.card .right {
  width: 300px;
  margin-left: 15px;
}
.card .right .book-title {
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card .right .desc {
  font-size: 12px;
  color: #999;
  line-height: 20px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  margin: 8px 0;
}
.card .right .info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding-bottom: 20px;
  padding-top: 10rpx;
  border-bottom: 1px solid #ebebeb;
}
.card .right .info .tag {
  color: #ffa54f;
  font-size: 18rpx;
  border: 1px solid #ffa54f;
  border-radius: 3px;
}
