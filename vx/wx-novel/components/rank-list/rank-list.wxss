.card {
  padding: 14px 0 ;
}
.card .icon {
  float: left;
  width: 55px;
  height: 75px;
  background: pink;
}
.card .icon image {
  width: 100%;
  height: 100%;
}
.card .l-right {
  margin-left: 60px;
}
.card .l-right .title {
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card .l-right .shortintro {
  margin: 5px 0;
  font-size: 12px;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}
.card .l-right .inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card .l-right .inner .author {
  color: #a3a3a3;
  font-size: 10px;
}
.card .l-right .inner .cate {
  font-size: 10px;
  color: #777;
  padding: 2px 5px;
  border-radius: 25px;
  background: #efeff4;
}
