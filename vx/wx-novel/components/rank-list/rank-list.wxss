.card {
  padding: 14px;
}
.card .icon {
  float: left;
  width: 50px;
  height: 75px;
  background: pink;
}
.card .icon image {
  width: 100%;
  height: 100%;
}
.card .right {
  padding-right: 14px;
}
.card .right .title {
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card .right .shortintro {
  font-size: 12px;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}
.card .right .inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card .right .inner .author {
  color: #a3a3a3;
  font-size: 10px;
}
.card .right .inner .cate {
  font-size: 11px;
  color: #777;
  background: #efeff4;
}
