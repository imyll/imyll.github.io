var slice = function(arr, start, end){
    if(arr){
        return arr.slice(start, end);
    }else{
        return null;
    }
}


var parseImageUrl = function(n){
    if(n){
        return decodeURIComponent(n.replace("/agent/",""))
    }else{
        return ""
    }
}

var translate = function(n){
    switch (n) {
        case "male":
            return "男生"
        case "female":
            return "女生"
        case "picture":
            return "漫画"
        default:
            return "出版"
    }
}

module.exports = {
    slice: slice,
    parseImageUrl: parseImageUrl,
    translate:translate
}