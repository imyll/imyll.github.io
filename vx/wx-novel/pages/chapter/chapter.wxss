.top {
  display: flex;
  justify-content: space-between;
  width: 680rpx;
  margin: 0 auto;
  line-height: 40px;
}
.top .count .mulu {
  font-weight: bold;
}
.top .count .num {
  font-size: 12px;
  color: gray;
  margin-left: 5px;
}
.list {
  padding: 14px;
  line-height: 40px;
  font-size: 12px;
  color: gray;
}
.list .chapter {
  display: flex;
}
.list .chapter .content {
  margin-left: 5px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
