.nav {
  width: 100%;
  display: flex;
  border-bottom: 1px solid #ebebeb;
}
.nav view {
  width: 50%;
  text-align: center;
  line-height: 3;
}
.nav view.active {
  color: #ee4745;
  border-bottom: 1px solid #ee4745;
}
.rank {
  height: 100vh;
  overflow: hidden;
}
.rank .left {
  width: 20%;
  height: 100%;
  text-align: center;
  overflow-y: scroll;
  float: left;
  margin-right: 14px;
  border-right: 1px solid #ebebeb;
}
.rank .left .title {
  padding: 0 8px;
  height: 50px;
}
.rank .left .title .list {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f0f0f0;
}
.rank .left .title .active {
  background: #f9f9fb;
  position: relative;
}
.rank .left .title .active::after {
  content: '';
  width: 1.5px;
  height: 20px;
  background: #ee4745;
  position: absolute;
  left: -8px;
  display: inline-block;
}
.rank .right {
  margin-top: 10px;
  padding-right: 14px;
  overflow: scroll;
  height: 100%;
}
.rank .right .r-book {
  height: 100px;
  margin-bottom: 10px;
}
.rank .right .r-book .cover {
  float: left;
  margin-right: 6px;
}
.rank .right .r-book .inner .booktitle {
  line-height: 1.5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.rank .right .r-book .inner .desc {
  font-size: 12px;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin: 6px 0;
}
.rank .right .r-book .inner .sku {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 12px;
}
.rank .right .r-book .inner .sku .author {
  color: #a3a3a3;
}
.rank .right .r-book .inner .sku .minorcate {
  color: #777;
  line-height: 1.5;
  background: #efeff4;
  padding: 0 5px;
  border-radius: 12px;
}
