page .content {
  line-height: 1.5;
  padding: 0 10px;
}
page .content.dark {
  background: #161819;
  color: #666;
}
page .content.eye {
  background: #c7edcc;
  color: #262626;
}
page .content.retro {
  background: url(https://qidian.gtimg.com/qd/images/read/theme/body_theme1_bg.9987a.png);
  color: #262626;
}
page .content .p {
  text-indent: 2em;
}
page .bar .font-size {
  margin: 30px auto;
  width: 80%;
}
page .bar .bar-btn {
  display: flex;
  margin: 20px;
  justify-content: space-around;
}
page .bar .bar-btn button {
  margin: 0;
  padding: 0;
  width: 20%;
  font-size: 12px;
}
page .bar .theme {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
page .bar .theme view {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  text-align: center;
  line-height: 50px;
  border: 1px solid #999;
}
page .bar .theme view.dark {
  background: #161819;
  color: #666;
}
page .bar .theme view.eye {
  background: #c7edcc;
  color: #262626;
}
page .bar .theme view.retro {
  background: url(https://qidian.gtimg.com/qd/images/read/theme/body_theme1_bg.9987a.png) no-repeat;
  color: #262626;
}
