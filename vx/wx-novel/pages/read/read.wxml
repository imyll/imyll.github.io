<!-- <nav-bar>{{content.title}}</nav-bar> -->
<view class="nav-bar">
    <van-nav-bar left-arrow left-text="返回" bind:click-left="onClickLeft">
        <view class="title" slot="title">{{content.title}}</view>
    </van-nav-bar>
</view>
<!-- <text>pages/read/read.wxml</text> -->
<view class="content {{config.theme}}" bindtap="showPopup" style="font-size: {{config.size}}px;">
    <view class="p" wx:for="{{content.cpContent}}" wx:key="index">{{item}}</view>
</view>

<view class="bar">
    <van-popup show="{{ show }}" position="bottom" custom-style="height: 200px;" bind:close="onClose">
    <view class="font-size">
        <van-slider value="{{config.size}}" min="12" max="24" step="2" bind:change="onChange" />
    </view>
    <view class="theme">
        <view class="{{item.text}}" wx:for="{{themes}}" wx:key="index" bindtap="changeTheme" data-theme="{{item.text}}">{{item.name}}</view>
    </view>
    <view class="bar-btn">
        <button class="back" bindtap="back">上一章</button>
        <button>目录</button>
        <button class="next" bindtap="next">下一章</button>
    </view>
    </van-popup>
</view>